<div class="layout-container">
    <div class="left-container"></div>
    <div class="layout-center-container">
        <form action="/users/login" method="POST">
            <div class="email">
                <div><label class="email-label" for="email">Email:</label></div>
                <input class="email-input" type="email" name="email" id="email" autocomplete="off">
            </div>

            <div class="password">
                <div><label class="password-label" for="password">Password:</label></div>
                <input class="password-input" type="password" name="password" id="password" autocomplete="off">
            </div>

            <button class="login-button" type="submit">Login</button>
        </form>
    </div>
    <div class="right-container"></div>
</div>